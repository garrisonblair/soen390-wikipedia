<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_notes"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout android:id="@+id/note_title_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/note_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/note_speak"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_speak"
            android:background="?attr/selectableItemBackground"
            android:clickable="true" />
    </LinearLayout>
    <TextView android:id="@+id/note_dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView android:id="@+id/reference_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>